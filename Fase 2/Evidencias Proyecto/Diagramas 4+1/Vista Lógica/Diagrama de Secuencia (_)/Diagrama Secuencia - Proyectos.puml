@startuml
actor Vecino
actor "Administrador Junta" as Admin

participant "Frontend (Web/App)" as FE
participant "Backend (API)" as BE
database "Base de Datos" as DB
participant "Módulo Notificaciones" as NOTI

== Flujo de Postulación de Proyecto Vecinal ==

Vecino -> FE : Completar formulario de postulación
FE -> BE : Enviar datos de postulación
BE -> DB : Registrar proyecto (estado = Pendiente)

alt Registro exitoso
    BE --> FE : Confirmación de registro
    BE -> Admin : Notificar nueva postulación
    Admin -> BE : Revisar y Aprobar/Rechazar proyecto

    alt Proyecto Aprobado
        BE -> DB : Actualizar estado = Aprobado
        BE -> NOTI : Preparar notificación de aprobación
        NOTI --> Vecino : Enviar resultado (Aprobado)
    else Proyecto Rechazado
        BE -> DB : Actualizar estado = Rechazado
        BE -> NOTI : Preparar notificación de rechazo
        NOTI --> Vecino : Enviar resultado (Rechazado)
    end

else Error en registro
    BE -> NOTI : Generar notificación de error
    NOTI --> Vecino : Informar error en postulación
end
@enduml
